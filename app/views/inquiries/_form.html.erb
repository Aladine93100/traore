<div class="formulaire">
<%= form_for inquiry do |f| %>
  <div>
    <%= f.label :name %><br/>
    <%= f.text_field :name %>
  </div>

  <div>
    <%= f.label :firstname %><br/>
    <%= f.text_field :firstname %>
  </div>

  <div>
    <%= f.label :telephone%><br/>
    <%= f.text_field :telephone %>
  </div>
  
  <div>
    <%= f.label :message %><br/>
    <%= f.text_area :message %>
  </div>
  
  <div>
    <%= f.submit "Send" %>
  </div>
<% end %>
</div>